<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">MovieCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                    <img class="img-responsive" src="<%= movie.image %>" alt="">
            </div>
            <hr>    
            <div class="caption">
                <h4 class="float-right">Rs: 4000/night</h4>
                <h4><a href="#"><%= movie.name %></a></h4>
                <p class="description"><%= movie.description %></p>
            </div>
            <hr>
            <div class="well">
                <div class="text-right">
                        <a class="btn btn-success" href="/movies/<%= movie._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% movie.comments.forEach((comment)=> { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p class="comment">
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    
                <% }); %>
            </div> 
        </div>
    </div>
</div>
<%- include('../partials/footer') %>