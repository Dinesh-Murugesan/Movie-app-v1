<%- include('../partials/header') %>
<div class="container">
        <h1 style="text-align: center;">Add Comments here! <%= movie.name %></h1>
        <div style="margin: 25px auto; width: 30%">
            <form action="/movies/<%= movie._id %>/comments" method="POST">
                <div class="form-group row">
                    <input class="form-control" type="text" name="comment[text]" id="text" placeholder="text">
                </div>
                <div class="form-group row">
                    <input class="form-control" type="text" name="comment[author]" id="author" placeholder="author">
                </div>
                <div class="form-group row">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>  
            </form>
            <a href="/movies/<%= movie._id %>">Go Back</a>
        </div>
</div>
<%- include('../partials/footer') %>